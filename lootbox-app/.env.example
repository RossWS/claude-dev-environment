# DiscoveryBox Production Environment Variables
# Copy this file to .env and update with your actual values

# Environment
NODE_ENV=production
PORT=5000

# Database
DB_PATH=./database/discoverybox.db
DATABASE_URL=./database/discoverybox.db

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
ALLOWED_ORIGINS=https://discoverybox.app,https://www.discoverybox.app

# Content API Keys (if using external services)
TMDB_API_KEY=your-tmdb-api-key
OMDB_API_KEY=your-omdb-api-key

# Email (for future user notifications)
EMAIL_HOST=smtp.your-provider.com
EMAIL_PORT=587
EMAIL_USER=noreply@discoverybox.app
EMAIL_PASS=your-email-password
EMAIL_FROM=DiscoveryBox <noreply@discoverybox.app>

# Analytics (optional)
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
SENTRY_DSN=https://your-sentry-dsn

# CDN (optional for static assets)
CDN_URL=https://cdn.discoverybox.app

# Domain
DOMAIN=discoverybox.app
SUBDOMAIN=www

# SSL
SSL_CERT_PATH=/etc/letsencrypt/live/discoverybox.app/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/discoverybox.app/privkey.pem

# Backup
BACKUP_S3_BUCKET=discoverybox-backups
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# Monitoring
HEALTH_CHECK_TOKEN=your-health-check-secret-token