{
  "name": "discoverybox-app",
  "version": "1.0.0",
  "description": "Gamified content discovery platform for movies and TV shows",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "nodemon backend/server.js",
    "frontend": "npx http-server frontend -p 3000",
    "build": "npm run build:css && npm run build:js",
    "build:css": "cat frontend/css/*.css > frontend/dist/styles.min.css",
    "build:js": "cat frontend/js/*.js > frontend/dist/app.min.js",
    "db:setup": "node backend/utils/setup-database.js",
    "db:seed": "node backend/utils/seed-database.js",
    "db:migrate": "node backend/utils/migrate-database.js",
    "test": "jest",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "keywords": ["discoverybox", "content", "discovery", "movies", "tv", "gamification", "streaming"],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "sqlite3": "^5.1.6",
    "express-rate-limit": "^7.1.5",
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "express-validator": "^7.0.1",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}